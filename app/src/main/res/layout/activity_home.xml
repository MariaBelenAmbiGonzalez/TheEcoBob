<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="@color/blanco">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee"
            android:padding="0dp"
            android:text="@string/residuos"
            android:textAllCaps="true"
            android:textColor="@color/negro"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textSize="30sp" />

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="120dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/fnegro">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/bungee"
                    android:padding="10dp"
                    android:text="@string/plastico"
                    android:textColor="@color/amarillo"
                    android:textAllCaps="true"
                    android:textSize="25sp" />

            <ImageButton
                android:id="@+id/btnPlastico"
                style="@android:style/Widget.ImageButton"
                android:layout_width="189dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="0dp"
                android:scaleType="fitXY"
                android:background="@color/negro"
                app:srcCompat="@drawable/plastico" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:background="@drawable/fnegro">

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/bungee"
                android:padding="10dp"
                android:text="@string/papel"
                android:textColor="@color/azul"
                android:textAllCaps="true"
                android:textSize="25sp" />

            <ImageButton
                android:id="@+id/btnPapel"
                style="@android:style/Widget.ImageButton"
                android:layout_width="189dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="0dp"
                android:scaleType="fitXY"
                android:background="@color/negro"
                app:srcCompat="@drawable/papelycarton" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:background="@drawable/fnegro">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/bungee"
                    android:padding="10dp"
                    android:text="@string/vidrio"
                    android:textColor="@color/verde"
                    android:textAllCaps="true"
                    android:textSize="25sp" />

                <ImageButton
                    android:id="@+id/btnVidrio"
                    style="@android:style/Widget.ImageButton"
                    android:layout_width="189dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="0dp"
                    android:scaleType="fitXY"
                    android:background="@color/negro"
                    app:srcCompat="@drawable/vidrio" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:background="@drawable/fnegro">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/bungee"
                    android:padding="10dp"
                    android:text="@string/orgÃ¡nico"
                    android:textColor="@color/marron"
                    android:textAllCaps="true"
                    android:textSize="25sp" />


                <ImageButton
                    android:id="@+id/btnOrganico"
                    style="@android:style/Widget.ImageButton"
                    android:layout_width="189dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="0dp"
                    android:scaleType="fitXY"
                    android:background="@color/negro"
                    app:srcCompat="@drawable/organicos" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:background="@drawable/fnegro">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/bungee"
                    android:padding="10dp"
                    android:text="@string/resto"
                    android:textColor="#BCBABA"
                    android:textAllCaps="true"
                    android:textSize="25sp" />

                <ImageButton
                    android:id="@+id/btnResto"
                    style="@android:style/Widget.ImageButton"
                    android:layout_width="189dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="0dp"
                    android:scaleType="fitXY"
                    android:background="@color/negro"
                    app:srcCompat="@drawable/desechosgeneral_" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp">
                
                <Button
                    android:id="@+id/btnjuegareciclando"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:background="@drawable/famarillo"
                    android:text="JUEGA RECICLANDO"
                    android:fontFamily="@font/bungee"
                    android:textSize="26sp">
                </Button>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>