<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Amarillo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="?actionBarSize">

            <ImageButton
                android:id="@+id/atras"
                style="@android:style/Widget.ImageButton"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/backcloud" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp">

            <TextView
                android:layout_width="208dp"
                android:layout_height="97dp"
                android:fontFamily="@font/concert_one"
                android:padding="5dp"
                android:text="CONTENEDOR AMARILLO"
                android:textColor="@color/plastico"
                android:textSize="33dp" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="98dp"
                android:layout_alignParentRight="true"
                android:paddingLeft="25dp"
                android:src="@drawable/plastico"
                android:transitionName="logo_image" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <TextView
                android:layout_width="408dp"
                android:layout_height="97dp"
                android:fontFamily="@font/bungee"
                android:text="2.300 millones de kilos plástico acaba en los océanos"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="16dp">

            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="382dp"
            android:layout_height="182dp"
            android:background="@color/vidrio">

            <LinearLayout
                android:id="@+id/featured_background"
                android:layout_width="130dp"
                android:layout_height="200dp"
                android:background="@color/lightWhite"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="50dp"
                    android:text="@string/sitirar"
                    android:textAllCaps="true"
                    android:textColor="@color/plastico"
                    android:fontFamily="@font/concert_one"
                    android:textSize="21sp">

                </TextView>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/featured_recycler"
                android:layout_width="170dp"
                android:layout_height="300dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/featured_background">
            </androidx.recyclerview.widget.RecyclerView>


        </RelativeLayout>

    </LinearLayout>

</ScrollView>